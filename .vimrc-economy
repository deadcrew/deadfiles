set nocompatible

let $RUNTIME=$HOME . "/.vim-economy"

set rtp-=~/.vim
set rtp^=$RUNTIME

if empty(glob($RUNTIME . "/autoload/plug.vim"))
  silent !mkdir -p $RUNTIME/tmp
  silent !mkdir -p $RUNTIME/autoload
  silent !curl -fLo $RUNTIME/autoload/plug.vim
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall
endif

let g:mapleader="\<Space>"
let mapleader=g:mapleader

nnoremap <Leader><Leader>i :PlugInstall<CR>
nnoremap <Leader><Leader>u :PlugUpdate<CR>

call plug#begin('$RUNTIME/bundle')

Plug 'reconquest/vim-colorscheme'
    let g:colors_name = 'reconquest'

Plug 'vim-airline/vim-airline'
    let g:airline_theme = 'reconquest'
    let g:airline#extensions#whitespace#symbol = '☼'
    let g:airline_powerline_fonts = 1

Plug 'godlygeek/tabular', { 'on': 'Tabularize' }
    vnoremap <C-T> :Tabularize /

Plug 'seletskiy/vim-nunu'

Plug 'vim-utils/vim-man'

call plug#end()

syntax on
filetype plugin indent on

set encoding=utf-8
set printencoding=cp1251
set fileformat=unix

set textwidth=79
set timeoutlen=400
set wildmenu

set undofile
set undodir=$RUNTIME/tmp/
set directory=$RUNTIME/tmp/
set backupdir=$RUNTIME/tmp

set lazyredraw
set ttyfast

set number
set relativenumber

set history=500

set hlsearch
set incsearch

set ignorecase
set smartcase

set expandtab
set autoindent
set shiftwidth=4
set softtabstop=4
set tabstop=4
set backspace=2
set splitright

set laststatus=2

set gdefault
set completeopt-=preview
set nowrap
set updatetime=150
set showtabline=0
set cino=(s,m1,+0

set list
set lcs=eol:¶,trail:·,tab:\ \ "

set pastetoggle=<F11>

set nofoldenable
set noequalalways
set winminheight=0
set clipboard=unnamed
set shortmess+=sAIc

nnoremap X S<ESC>
vnoremap $ g_

nnoremap > >>
nnoremap < <<

vnoremap <silent> > >gv
vnoremap <silent> < <gv

inoremap jk <ESC>

nnoremap g< '<
nnoremap g> '>

nnoremap g. '>
nnoremap g, '<

nnoremap <Leader>r :w<CR>

nnoremap <Leader>n <ESC>:bdelete!<CR>
nnoremap <Leader>, <ESC>:qa!<CR>
nnoremap <Leader>q <ESC>:q<CR>

nnoremap <Leader> :noh<CR>

nnoremap <Leader>d V"_d<Esc>
vnoremap <Leader>d "_d

nnoremap <C-E><C-E><C-R> :silent !rm -rf $RUNTIME/view/*<CR>:redraw!<CR>

imap <C-A> <C-O>A

nmap <C-_> <C-W>_
nmap <C-H> <C-W>h
nmap <C-J> <C-W>j
nmap <C-K> <C-W>k
nmap <C-L> <C-W>l

imap <C-T> <C-R>=strpart(search("[)}\"'`\\]]", "c"), -1, 0)<CR><Right>

inoremap <C-H> <C-O>o

imap <C-U> <ESC>ua

noh

nmap <Tab> /

map Q <nop>
map K <nop>
