#!/bin/bash

set -euo pipefail

:usage() {
    sed -r 's/^([ ]{4}|\t)//g' <<USAGE
    lojban-next

    Usage:
        lojban-next [-n] <prefix>
        lojban-next -h

    Options:
        <prefix>  Specify lojban prefix
        -n        Display numeric value.
        -h        Show this screen.
USAGE
}

:lojban-to-number() {
    sed -r \
        -e "s/pa/1/g" \
        -e "s/re/2/g" \
        -e "s/ci/3/g" \
        -e "s/vo/4/g" \
        -e "s/mu/5/g" \
        -e "s/xa/6/g" \
        -e "s/ze/7/g" \
        -e "s/bi/8/g" \
        -e "s/so/9/g" \
        -e "s/no/0/g"
}

:number-to-lojban() {
    sed -r \
        -e "s/1/pa/g" \
        -e "s/2/re/g" \
        -e "s/3/ci/g" \
        -e "s/4/vo/g" \
        -e "s/5/mu/g" \
        -e "s/6/xa/g" \
        -e "s/7/ze/g" \
        -e "s/8/bi/g" \
        -e "s/9/so/g" \
        -e "s/0/no/g"
}

:main() {
    local numeric=false

    while getopts ":h:n" key; do
        case "$key" in
            h)
                :usage
                exit 0
                ;;

            n)
                numeric=true
                shift
                ;;
        esac
    done
    local OPTIND # reset options

    if [ $# -eq 0 ]; then
        :usage
        exit 1
    fi

    local prefix="$1"
    shift

    if [ $# -ne 0 ] && [ "$1" = "-n" ]; then
        numeric=true
    fi


    local records=$(pdns records list -n "$prefix%.%" -t CNAME)

    local numbers=$(
         echo "$records" \
            | sed -r "s/^$prefix(\w+)\..*/\1/g" \
            | :lojban-to-number \
            | sort -n
    )

    local bad=""
    if bad=$(grep -P '[^\d]' <<< "$numbers"); then
        echo "detected malicious (non-lojban) CNAME records:" >&2
        :number-to-lojban <<< "$bad" | sed "s/^/$prefix/g"
        numbers=$(grep -v -P '[^\d]' <<< "$numbers")
    fi

    local number=$(tail -n1 <<< "$numbers")

    if $numeric; then
        echo $((number+1))
    else
        :number-to-lojban <<< $((number+1))
    fi

    exit 0
}

:log() {
    echo "[$(date -Iseconds | cut -dT -f1)] $*" >&2
}

:main "$@"
