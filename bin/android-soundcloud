#!/bin/bash

set -euo pipefail

KEYCODE_MEDIA_NEXT="87"
KEYCODE_MEDIA_PLAY_PAUSE="85"
KEYCODE_MEDIA_PREVIOUS="88"

__main__() {
    eval "soundcloud:$1"
}

soundcloud:screen(){
    android:launch "com.soundcloud.android/.main.LauncherActivity"
    sleep 0.3
}

soundcloud:play(){
    android:keyevent $KEYCODE_MEDIA_PLAY_PAUSE
}

soundcloud:previous(){
    android:keyevent $KEYCODE_MEDIA_PREVIOUS
}

soundcloud:next() {
    android:keyevent $KEYCODE_MEDIA_NEXT
}

soundcloud:like() {
    soundcloud:screen

    #android:tap 576 1235
    android:tap $(android:get_percent_coords 80 91)
}

android:launch() {
    local activity="$1"
    adb shell am start -a android.intent.action.MAIN -n $activity
}

android:tap() {
    local x="$1"
    local y="$2"
    adb shell input tap $1 $2
}

android:keyevent() {
    local keyevent="$1"
    adb shell input keyevent $keyevent
}

android:get_percent_coords() {
    local percent_x="$1"
    local percent_y="$2"

    local size=$(adb shell dumpsys window visible \
        | awk '/Window #.*soundcloud/,/Surface:/' \
        | tail -n1 \
        | grep -Eo '\S+ x \S+' \
        | grep -Eo '[0-9]{2,}' \
        | xargs echo \
    )

    set $size

    local width=$1
    local height=$2

    echo $(bc \
        <<< "$width*$percent_x/100; $height*$percent_y/100" \
    )
}

__main__ $@
