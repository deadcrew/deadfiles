#!/bin/bash

for dir in /run/user/$UID/*/bin/; do
    export PATH=$PATH:$dir
done

terminal=false
if [[ "$1" == "--terminal" ]]; then
    terminal=true
    shift
fi

RUN="$(modal-apps | modal "$@")"
if [[ ! "$RUN" ]]; then
    exit 2
fi

COMMAND=($RUN)

RUNPATH="$(which "$COMMAND")"

if [[ ! "$RUNPATH" ]]; then
    exit 2
fi

if $terminal; then
    exec marvex -s -e $RUNPATH "${COMMAND[@]:1}"
else
    exec $RUNPATH "${COMMAND[@]:1}"
fi
