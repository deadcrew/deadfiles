#!/bin/bash
###
### gorun compiles (if modified) and runs project
###
### gorun [<directory>]
###

set -euo pipefail

oldpwd="$(pwd)"
if [[ "${1:-}" ]]; then
    if [[ -d "$1" ]]; then
        cd "$1"
        shift
    fi
fi

name=$(basename "$(pwd)")
GOBIN=$(pwd) go install
bin=$(readlink -f "$(pwd)/$name")

cd "$oldpwd"

exec "$bin" "${@}"
