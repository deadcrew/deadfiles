#!/bin/bash

set -euo pipefail

:modal() {
    modal-template --no-description -- -lines 5
}

:main() {
    local mode="${1:-}"

    local db_file=${DB:-$HOME/.config/bookmarks/db.yaml}
    if [[ ! -f $db_file ]]; then
        echo "db file does not exist:"
        echo "  $db_file"
        exit 1
    fi

    if [[ ! "$mode" ]]; then
        url=$(gbookmarks "$db_file" | :modal)

        if [[ "$url" ]]; then
            browser "$url"
        fi

        exit 0
    fi

    if [[ "$mode" == "add" ]]; then
        url="$(xclip -o)"
        title="$(
            modal -lines 0 \
                -mesg "URL: $(sed -re 's/&/\&amp;/g' <<< "$url")"
        )"

        if gbookmarks "$db_file" "$url" "$title"; then
            notify-desktop "" "â™¥ Bookmark saved"
        else
            notify-desktop "" "Unable to save bookmark"
            exit 1
        fi

        exit 0
    fi
}

:main "${@}"
