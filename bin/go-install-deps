#!/bin/bash

if [[ "$1" && "$1" != "-v" ]]; then
    cd "$(dirname "$1")"
    shift
fi

nproc=$(expr $(nproc) + 1)

deps=$(go list -f '{{join .Deps "\n"}}{{"\n"}}{{join .TestImports "\n"}}' ./... \
        | xargs -P$nproc go list \
            -f '{{if not .Standard}}{{.ImportPath}}{{end}}')

if [[ "${1:-}" == "-v" ]]; then
    deps=$(grep -v "/vendor/" <<< "$deps")
fi

total=$(wc -l <<< "$deps")
i=0

xargs <<< "$deps" -P$nproc -n1 -I{} \
    sh -c 'echo {} && /bin/go install {}' \
    | while read line; do
        i=$((i+1))

        echo "[$i/$total] $line"
    done

pkill gopls
echo "ðŸ˜— gopls killed"
