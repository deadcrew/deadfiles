#!/bin/bash

set -euo pipefail

pane="${1:-}"
if [[ ! "$pane" ]]; then
    pane=$(
        tmux list-clients -F '#{session_name}' \
            | xargs -P5 '-I{}' -n1 \
                sh -c 'line=$(tmux capture-pane -pJ -t {} | grep -m1 .); echo "{} $line"' \
            | fzf --preview='tmux.preview {}' --preview-window up:80:noborder
    )
    if [[ ! "$pane" ]]; then
        exit
    fi

    pane=$(awk '{print $1}' <<< "$pane")
fi


dir=$(mktemp -d)
mkdir -p $dir
mkfifo $dir/tail

trap "rm -rf $dir" EXIT

tmux capture-pane -pJS- -t $pane > $dir/head
tmux pipe-pane -t $pane "cat > $dir/tail" &
pid=$!

trap "kill $pid 2>/dev/null; rm -rf $dir;" EXIT

head -n-1 $dir/head ; cat $dir/tail
