#!/bin/bash

exec 2>/dev/null

while :; do
    win_id=$(xdotool search --sync --class --onlyvisible upwork)
    if [[ ! "$win_id" ]]; then
        sleep 10
        continue
    fi

    if xwininfo -id "$win_id" | grep -qF 'Width: 360'; then
        xdotool windowclose "$win_id"
        sleep 60
    fi
done
