#!/bin/bash

if [[ ! -f .shortcuts ]]; then
    exec "${@}"
    exit
fi

exprs_to=()
exprs_from=()
while read line; do
    chunks=(${line//:/ })
    exprs_to+=("-e" "s|^${chunks[1]}|${chunks[0]}:|")
    exprs_from+=("-e" "s|^${chunks[0]}:|${chunks[1]}|")
done < .shortcuts

if [ -t 0 ]; then
    exec "${@}"
else
    sed "${exprs_to[@]}" | ${@} | sed "${exprs_from[@]}"
fi
