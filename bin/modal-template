#!/bin/bash

source /usr/share/bash/opts/opts.bash

declare -a args
declare -A opts

opts:parse opts args \
    --message: --no-description -h --help --args: -- "${@}"

if [[ "${opts[--help]}" ]]; then
    cat <<HELP
Usage:

    modal-template -h | --help
    modal-template <template>
HELP

    exit 1
fi

template='
    <span font_weight="bold">
        \(.title)
    </span>
    <br>
        &#8250; \(.item)
'

rows=2

if [[ ! "${opts[--no-description]}" ]]; then
    rows=3

    template+='
        <br>
        <span color="#bbb">
            &#160;&#160;
            <span font="Tahoma 8">
                \(.description)
            </span>
        </span>
    '
fi

template+='<end>'

template=$(
    tr -d '\n' <<< "${1:-$template}" \
        | sed -r 's/\s+(<)|(>)\s+/\1\2/g' \
        | sed 's/"/\\"/g'
)

shift

set -x

jq -r '.[] | "'"$template"'"' \
    | tr -d '\n' \
    | sed -u 's/<end>/\x0/g' \
    | sed -u 's/<br>/\n/g' \
    | modal -markup-rows -eh "$rows" -sep '\0' -mesg "${opts[--message]:-}" ${opts[--args]:-} "${@}" \
    | sed -n '2p' \
    | cut -f2- -d' '
