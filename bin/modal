#!/bin/bash

mode="-dmenu"
if printf '%s\n' "$@" | grep -q -xE -- '-e'; then
    mode=""
fi

matching="normal"
args=()
while [[ "${1:-}" ]]; do
    args+=("$1")
    shift
done

exec rofi \
    -bw 1 \
    -padding 1 \
    -line-margin 1 \
    -width 30 \
    -location 0 \
    -hide-scrollbar \
    -color-enabled \
    -separator-style none \
    -i \
    -p "" \
    "$mode" \
    "${args[@]}"
