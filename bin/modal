#!/bin/bash

mode="-dmenu"
if printf '%s\n' "$@" | grep -xE -- '-e'; then
    mode=""
fi

matching="fuzzy"
args=()
while [[ "${1:-}" ]]; do
    if [[ "$1" == "-matching" ]]; then
        matching="${2:-}"
        shift 2
        continue
    fi

    args+=("$1")
    shift
done

exec rofi \
    -bw 1 \
    -padding 1 \
    -line-margin 1 \
    -width 30 \
    -location 0 \
    -hide-scrollbar \
    -color-enabled \
    -separator-style none \
    -i \
    -p "" \
    "$mode" \
    -matching $matching \
    "${args[@]}"
