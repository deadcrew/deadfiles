#!/bin/bash

file=$1
basename=$(basename $file)
shift

pup=$(mktemp --suffix=.puppeteer-config.json)
trap "rm $pup" EXIT

cat >$pup <<EOF
{
  "args": ["--no-sandbox"]
}
EOF

output=${dir:-}${basename%.*}.png

echo ":: mermaid :: ${file} â†’ ${output}" >&2

exec mmdc -p $pup -i $file -o $output "${@}"
